{
  "name": "gateway-addon",
  "version": "0.12.0",
  "description": "Bindings for WebThings Gateway add-ons",
  "scripts": {
    "prepare": "if [ ! -d schema/messages ]; then git submodule init; git submodule update; fi",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "build": "tsc -p .",
    "install": "npm run build"
  },
  "main": "lib/index.js",
  "keywords": [
    "webthings"
  ],
  "homepage": "https://github.com/WebThingsIO/gateway-addon-node",
  "author": "WebThingsIO",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/WebThingsIO/gateway-addon-node.git"
  },
  "bugs": {
    "url": "https://github.com/WebThingsIO/gateway-addon-node/issues"
  },
  "dependencies": {
    "ajv": "^6.12.5",
    "sqlite3": "^4.2.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.3",
    "@types/sqlite3": "^3.1.6",
    "@types/ws": "^7.2.7",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "typescript": "^4.0.3"
  },
  "files": [
    "LICENSE",
    "tsconfig.json",
    "src/index.ts",
    "src/action.ts",
    "src/adapter.ts",
    "src/addon-manager-proxy.ts",
    "src/api-handler.ts",
    "src/constants.ts",
    "src/database.ts",
    "src/deferred.ts",
    "src/device.ts",
    "src/event.ts",
    "src/ipc.ts",
    "src/notifier.ts",
    "src/outlet.ts",
    "src/plugin-client.ts",
    "src/property.ts",
    "src/utils.ts",
    "schema"
  ]
}
